<div class="container">

	<img src="assets/img/burger.png" class="center-block">
	
</div>

<div class="container">
	<div class="col-md-6">
		<ul>
			{{#each burgers}}
				{{#unless this.devoured}}
					<li>
						{{this.burger_name}}
						<form action="/{{this.id}}?_method=PUT" method="POST">
							<input type="hidden" name="devoured" value="1">
							<button type="submit" class="btn btn-default">Devour It!</button>
						</form>
					</li>
				{{/unless}}
			{{/each}}
		</ul>


	</div>


	<div class="col-md-6">
		<ul>
			{{#each burgers}}
				{{#if this.devoured}}
					<li>
						<h3>
						{{this.burger_name}}
						</h3>

					
					</li>
				{{/if}}
			{{/each}}
		</ul>
	</div>
	
	<div class="container col-md-4 col-md-offset-4">
		<form class="center-block" action="/" method="POST">
			<textarea class="form-control" rows="3" name="name">Enter a burger you would like to devour!</textarea>
			<button type="submit" class="center-block btn btn-default">Submit</button>
		</form>
	</div>
</div>